@{
    ViewData["Title"] = "Add Credit Card";
}
<body>
    <div class="row">
        <div class="col">
            <h2 style="text-align:center">Create a new CineMagic Credit Card</h2>
        </div>
    </div>
    <div class="row">
        </br>
    </div>
    <div class="row">
        <div class="col col-4">

        </div>
        <div class="col col-4" id="login">
            <form asp-controller="Administrator" asp-action="AddCreditCardDb" method="post">

                <input type="email" class="form-control" id="UserMail" name="UserMail" placeholder="Email" required>
                <br />
                <input type="number" class="form-control" id="Balance" name="Balance" placeholder="Balance" required>

                <br />
                <br />
                <button type="submit" class="btn btn-primary" id="btn" style="width:350px">Add Credit Card</button>

            </form>

        </div>
        <div class="col col-4">

        </div>
    </div>
</body>
@{
    ViewData["Title"] = "HomePage";
}
<body style="        background: url(images/bg1.jpg);
        background-repeat:repeat ">
    <div class="container-fluid">
        <div class="row" style="        background-color: burlywood">
            <div class="col-3">
                <img class="img-fluid" src="~/images/logo_providno_2.png" alt="Logo" style="width:250px;height:200px; align-content: end">
            </div>
            <div class="col-8 col">
                <div class="row">
                    <div class="col offset-1">
                        <h1 style="font-family: 'Copperplate Gothic'; font:bolder; font-size:75px;margin-top:10px;">CineMagic</h1>
                    </div>
                </div>
                <div class="row">
                    <br />
                </div>
                <div class="row offset-2">
                    <p class="text-center" style="font-family: 'Book Antiqua'; align-content:center; font-size: x-large"><strong>This is where magic happens.</strong></p>
                </div>
            </div>
        </div>
        <div class="row">
            <br />
        </div>
        <div class="row">
            <br />
        </div>

        <div class="container-fluid" style="background-color: burlywood">
            <div class="row">
                <br />
            </div>
            <div class="row" style="  font-family: 'Copperplate Gothic'; margin-left: 15px; text-underline-position: below; background-color: burlywood">
                <h3><strong>TRENDING NOW</strong></h3>
            </div>
            <div class="row">
                <br />
            </div>
            <div class="row">
                <div class="col-12">
                    <table class="table">
                        <tbody>
                            <tr>
                                @{var i = 0;}
                                @foreach (var item in Model)
                                {
                                    @if (i < 3)
                                    {
                                        <td>
                                            <a href="/Movies/Details/@item.Id">
                                                <img src="@Url.Content(@item.PosterURL)" style="width:300px;height:450px" />
                                            </a>
                                        </td>
                                    }

                                    i++;
                                }
                            </tr>
                            <tr>
                                @{i = 0;}
                                @foreach (var item in Model)
                                {
                                    @if (i >= 3 && i < 6)
                                    {
                                        <td>
                                            <a href="/Movies/Details/@item.Id">
                                                <img src="@Url.Content(@item.PosterURL)" style="width:300px;height:450px" />
                                            </a>
                                        </td>
                                    }

                                    i++;
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

